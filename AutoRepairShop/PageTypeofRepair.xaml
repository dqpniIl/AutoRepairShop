<Page x:Class="AutoRepairShop.PageTypeofRepair"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoRepairShop"
      mc:Ignorable="d" 
      d:DesignHeight="650" d:DesignWidth="920"
      Title="PageTypeofRepair">
    <Grid>
        <Label Content="Вид ремонта машины" HorizontalAlignment="Left" Margin="73,79,0,0" VerticalAlignment="Top" Width="222" FontSize="20" Grid.Column="0"/>
        <TextBox Name="tbTypeofRepair" HorizontalAlignment="Left" Margin="73,121,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="222" Height="79" FontSize="18" Grid.Column="0"/>
        <Button Name="btnSave" Content="Сохранить" HorizontalAlignment="Left" Margin="73,213,0,0" VerticalAlignment="Top" Height="34" Width="111" FontSize="16" Grid.Column="0" Click="btnSave_Click"/>
        <Button Name="btnDelete" Content="Удалить" HorizontalAlignment="Left" Margin="185,213,0,0" VerticalAlignment="Top" Height="34" Width="111" FontSize="16" Grid.Column="0" Click="btnDelete_Click"/>
        <Button Name="btnClear" Content="Очистить поле" HorizontalAlignment="Left" Margin="73,252,0,0" VerticalAlignment="Top" Height="34" Width="222" FontSize="16" Click="btnClear_Click"/>
        <Label Content="Список видов ремонта автомастерской" HorizontalAlignment="Left" Margin="368,55,0,0" VerticalAlignment="Top" Width="481" FontSize="24" Grid.Column="0" FontWeight="Bold"/>
        <ListBox Name="lboxTypeofRepair" Margin="368,97,41,34" SelectionChanged="lboxTypeofRepair_SelectionChanged"/>
    </Grid>
</Page>
